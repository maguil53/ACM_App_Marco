<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light">
        <!-- Customize your theme here. -->
        <!--<item name="android:windowLightStatusBar" tools:targetApi="m">true</item>-->

        <item name="android:textColorPrimary">@color/textColorPrimary</item>

        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

    </style>




    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!--
         Font Style for About Us Paragraphs.
         MarginTop should be smaller because we want
         paragraphs closer to their headers
    -->
    <style name="AppTheme.AboutUsInfo">
        <item name="android:textColor">#ffffff</item>
        <item name="android:textSize">17sp</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:paddingRight">5dp</item>
    </style>

    <!-- Font Style for About Us -->
    <style name="AppTheme.AboutUsHeader">
        <item name="android:textColor">@color/gold</item>
        <item name="android:textSize">30sp</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:paddingLeft">5dp</item>
    </style>

    <style name="AppTheme.ArticleCard">
        <item name="android:textColor">#ffffff</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
    </style>


    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

</resources>
